{{! Secondary navigation system.. Home / Organizations / View Organization }}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/orgs">Organizations</a></li>
    <li class="breadcrumb-item active" aria-current="page">View Organization</li>
  </ol>
</nav>

<div class="view-donor p-3">
  {{#each rows}}

    {{! Organization Summary: Total, ID, Designation, Status, Grant Cycle, Comment }}

    <div class="row mb-5">
      <div class="col text-center">
        <h3>{{this.org_name}}</h3>
        <h3>Total Grant Amounts: ${{this.sum}}</h3>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{this.org_id}}</td>
              <td>{{this.status}}</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col">
          <b>Comments</b>
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{this.comments}}
        </div>
      </div>
    </div>
  {{/each}}
</div>

{{! Information regarding every grant the Organziation provided }}
{{! For each grant reiceve: Grant Cycle, Application Due, Applied, Grant Decision, Funds Recieved, Report Due, Report Submitted }}

<div class="row p-2">
</div>

<div class="row">
  <div class="table-responsive col-10">
    <table class="table table-bordered table-condensed">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Grant Cycle</th>
          <th scope="col">Amount</th>
          <th scope="col">Designation</th>
          <th scope="col">Application Due</th>
          <th scope="col">Applied</th>
          <th scope="col">Grant Decision</th>
          <th scope="col">Funds Recieved</th>
          <th scope="col">Report Due</th>
          <th scope="col">Report Submitted</th>
          <th scope="col">Status</th>
          <th scope="col" class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each grants}}
          <tr>
            <th scope="row">{{this.grant_cycle}}</th>
            <td>{{this.amount}}</td>
            <td>{{this.designation}}</td>
            <td>{{this.application_due_date}}</td>
            <td>{{this.date_applied}}</td>
            <td>{{this.grant_decision_date}}</td>
            <td>{{this.funds_received_date}}</td>
            <td>{{this.report_due_date}}</td>
            <td>{{this.report_submitted_date}}</td>
            <td>{{this.status}}</td>
            <td class="text-end">
              <div class="d-flex flex-row justify-content-around">
                <a
                  href="{{this.org_id}}/editgrant/{{this.id}}"
                  type="button"
                  class="btn btn-outline-secondary btn-small m-1"
                ><i class="bi bi-pencil"></i>
                  Edit</a>
                <a
                  href="/delete/{{this.id}}"
                  type="button"
                  class="btn btn-outline-secondary btn-small m-1"
                ><i class="bi bi-person-x"></i> Delete</a>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="col-2">
    <ol class="list-group list-group-numbered" style="height:300px; overflow:scroll; overflow-y:scroll; overflow-x:hidden;">
       <ul>Total Funding Per Year</ul>
      {{#each yearlyTotal}}
      <li
        class="list-group-item d-flex justify-content-between align-items-start"
      >
        <div class="ms-2 me-auto">
          <div class="fw-bold">{{this.FundsRecvdDate}}</div>
          {{this.TotalAmount}}
        </div>
      </li>
      {{/each}}
    </ol>
  </div>
</div>
