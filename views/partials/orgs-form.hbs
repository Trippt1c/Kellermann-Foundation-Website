{{! ADD ORGANIZATION FORM
FIELDS:
Name
Type (Dropdown - individual, Organization)
Status (Dropdown - active, inactive, complete)
Website
Contact Name
Phone Number
Email
Address Line 1
Address Line 2
City
Zipcode
State
Comment Box

http://localhost:5000/orgs/addorg
}}

{{! Name }}
<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.org_name}}" placeholder="Name"
      name="org_name" />
    <label for="floatingInput">Name</label>
  </div>
</div>

{{! Type }}

<div class="col-6">
  <select id="floatingInput" class="form-select p-3" name="type">
    {{#if this.type}}
    <option selected value="{{this.type}}">{{this.type}}</option>
    {{else}}
    <option selected>Type</option>
    {{/if}}
    <option value="Individual">Individual</option>
    <option value="Organization">Organization</option>
  </select>
</div>

{{! Status }}

<div class="col-6">
  <select id="floatingInput" class="form-select p-3" name="status" required>
    {{#if this.status}}
    <option selected value="{{this.status}}">{{this.status}}</option>
    {{else}}
    <option selected value="Active">Status</option>
    {{/if}}
    <option value="Active">Active</option>
    <option value="Inactive">Inactive</option>
    <option value="Complete">Complete</option>
  </select>
</div>

{{! Website }}

<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.webaddress}}" placeholder="Website"
      name="webaddress" />
    <label for="floatingInput">Website</label>
  </div>
</div>

{{! Contact Name }}

<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.contact_name}}" placeholder="Main Contact"
      name="contact_name" />
    <label for="floatingInput">Main Contact</label>
  </div>
</div>

{{! Phone Number }}

<div class="col-6">
  <div class="form-floating mb-3">
    <input type="tel" class="form-control" id="floatingInput" value="{{this.phone_number}}" placeholder="Phone Number"
      name="phone_number" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" />
    <label for="floatingInput">Main Contact Phone Number</label>
  </div>
</div>

{{! Email }}

<div class="col-6">
  <div class="form-floating mb-3">
    <input type="email" class="form-control" id="floatingInput" value="{{this.email}}" placeholder="Email" name="email"
      pattern=".+@globex\.com" size="30" required />
    <label for="floatingInput">Main Contact Email</label>
  </div>
</div>

{{! Address Line 1 }}

<div class="col-6">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInput" value="{{this.address_line1}}"
      placeholder="Address Line 1" name="address_line1" />
    <label for="floatingInput">Address Line 1</label>
  </div>
</div>

{{! Address Line 2 }}

