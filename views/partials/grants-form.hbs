<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      value="{{this.title}}"
      placeholder="Grant Cycle"
      name="grant_cycle"
    />
    <label for="floatingInput">Grant Cycle</label>
  </div>
</div>
<div class="col-6">
  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="floatingInput"
      value="{{this.amount}}"
      placeholder="amount"
      name="amount"
    />
    <label for="floatingInput">Amount</label>
  </div>
</div>

<div class="col-4">
  <div class="form-floating mb-3">
    <select class="form-select p-3" id="designation" name="designation">
      {{#if this.designation}}
        <option value="{{this.designation}}">{{this.designation}}</option>
      {{else}}
        <option value="N/A">Designation</option>
      {{/if}}
      <option value="BCH">BCH</option>
      <option value="BDP">BDP</option>
      <option value="UNSB">UNSB</option>
      <option value="ENJU">ENJU</option>
    </select>
  </div>
</div>

<div class="col-4">
  <div class="form-floating mb-3">
    <input
      type="date"
      class="form-control"
      id="floatingInput"
      value="{{this.application_due_date}}"
      placeholder="now"
      name="application_due_date"
    />
    <label for="floatingInput">Application Due Date </label>
  </div>
</div>

<div class="col-4">
  <div class="form-floating mb-3">
    <input
      type="date"
      class="form-control"
      id="floatingInput"
      value="{{this.date_applied}}"
      placeholder="now"
      name="date_appplied"
    />
    <label for="floatingInput">Date Applied</label>
  </div>
</div>

<div class="col-4">
  <div class="form-floating mb-3">
    <input
      type="date"
      class="form-control"
      id="floatingInput"
      value="{{this.grant_decision_date}}"
      placeholder="now"
      name="grant_decision_date"
    />
    <label for="floatingInput">Date of Grant Decision</label>
  </div>
</div>

<div class="col-4">
  <div class="form-floating mb-3">
    <input
      type="date"
      class="form-control"
      id="floatingInput"
      value="{{this.report_submitted_date}}"
      placeholder="now"
      name="report_submitted_date"
    />
    <label for="floatingInput">Date Report Submitted</label>
  </div>
</div>

