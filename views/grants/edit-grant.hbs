{{#if alert}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}

{{#each rows}}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/orgs">Organizations</a></li>
    <li class="breadcrumb-item"><a href="/orgs/vieworg/{{this.org_id}}">{{this.org_name}}</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Grant</li>
  </ol>
</nav>

<form class="row g-3 needs-validation" method="POST" action="/orgs/vieworg/{{this.org_id}}/editgrant/{{this.id}}" novalidate> 
  {{> grants-form rows=rows orgs=orgs}}
</form>
{{/each}}